{
  "openapi": "3.0.1",
  "info": {
    "title": "OpenAPI Plant Store",
    "description": "A sample API that uses a plant store as an example to demonstrate features in the OpenAPI specification",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://{server_ip}:8000"
    }
  ],
  "paths": {
    "/addQueue": {
        "post": {
          "description": "Add your data to queue to transfer",
          "requestBody": {
            "description": "Plant to add to the store",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddToQueue"
                }
              }
            },
            "required": true
          },
          "responses": {
            "200": {
              "description": "User response",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Response"
                  }
                }
              }
            },
            "400": {
              "description": "unexpected error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Error"
                  }
                }
              }
            }
          }
        }
    },
    "/addUser": {
      "post": {
        "description": "Add a user within the organization locally",
        "requestBody": {
          "description": "Necessary details to create user",
          "content": {
            "application/json" : {
              "schema": {
                "$ref": "#/components/schemas/AddUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/deleteUser": {
      "delete": {
        "description": "Delete a user in the organization of a particular location.",
        "requestBody": {
          "description": "Necessary required to delete a user.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DeleteUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with updated user details.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Error response due to invalid request parameters.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/allUsers": {
      "get": {
        "description": "Get all the users in the organization of a particular location.",
        "requestBody": {
          "description": "Details required to update the user.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BasicRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with updated user details.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Error response due to invalid request parameters.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/archives": {
      "get": {
        "description": "Fetch all the outgoing and incoming transfers of a particular location.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BasicRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with updated user details.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Error response due to invalid request parameters.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/outgoing/queue": {
      "get": {
        "description": "Get all the transfers in the queue transferring from current location to others.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BasicRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with updated user details.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Error response due to invalid request parameters.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/outgoing/ongoing": {
      "get": {
        "description": "Ongoing transfer transferring from current location to another.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BasicRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with updated user details.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Error response due to invalid request parameters.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/cancelQueueById": {
      "patch": {
        "description": "Cancel a transfer in the outgoing queue of a particular location.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CancelQueue"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with updated user details.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Error response due to invalid request parameters.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/incoming/complete": {
      "get": {
        "description": "List of all completed transfers which has been transferred to the current location.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BasicRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with updated user details.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Error response due to invalid request parameters.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/incoming/ongoing": {
      "get": {
        "description": "List of all currently ongoing transfers which has been transferred to the current location.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BasicRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with updated user details.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Error response due to invalid request parameters.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/updateUser": {
      "patch": {
        "description": "Update the details of an existing user.",
        "requestBody": {
          "description": "Details required to update the user.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with updated user details.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Error response due to invalid request parameters.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Response": {
        "type": "object",
        "properties": {
          "status": {
            "description": "Status of the query true for success or false for error",
            "type": "boolean"
          },
          "message": {
            "description": "The response message",
            "type": "string"
          }
        }
      },
      "AddToQueue": {
        "required": [
          "apiUser",
          "apiPassword",
          "apiKey",
          "username",
          "name",
          "submit_speed_in_mbps",
          "receiving_ip",
          "receive_location_name",
          "sending_ip",
          "sending_paths"
        ],
        "type": "object",
        "properties": {
          "apiUser": {
            "description": "Username which is provided by us.",
            "type": "string"
          },
          "apiPassword": {
            "description": "Password provided by us.",
            "type": "string"
          },
          "apiKey": {
            "description": "API key provided by us to access API",
            "type": "string"
          },
          "username": {
            "description": "Username which is being create within the organisation by the admin",
            "type": "string"
          },
          "name": {
            "description": "Give your transfer a name",
            "type": "string"
          },
          "submit_speed_in_mbps": {
            "description": "Assign speed to transfer",
            "type": "integer"
          },
          "receiving_ip": {
            "description": "Ip address of receiving side. If local ip is accessible the write local IP, like 192.168.1.1",
            "type": "string"
          },
          "receiving_location_name": {
            "description": "Name of the receiving location",
            "type": "string"
          },
          "sending_ip": {
            "description": "Ip address of sending server side, like 192.168.1.2",
            "type": "string"
          },
          "sending_paths": {
            "description": "comma seperated values and make sure in the end of folder there is / like '/path/to/folder,/path/to/file.txt'",
            "type": "string"
          }
        }
      },
      "CancelQueue": {
        "required": [
          "apiUser",
          "apiPassword",
          "apiKey",
          "id"
        ],
        "type": "object",
        "properties": {
          "apiUser": {
            "description": "Username which is provided by us.",
            "type": "string"
          },
          "apiPassword": {
            "description": "Password provided by us.",
            "type": "string"
          },
          "apiKey": {
            "description": "API key provided by us to access API",
            "type": "string"
          },
          "id": {
            "description": "Object id from database of the queue to cancel it to transfer to another location.",
            "type": "string"
          }
        }
      },
      "BasicRequest": {
        "required": [
          "apiUser",
          "apiPassword",
          "apiKey"
        ],
        "type": "object",
        "properties": {
          "apiUser": {
            "description": "Username which is provided by us.",
            "type": "string"
          },
          "apiPassword": {
            "description": "Password provided by us.",
            "type": "string"
          },
          "apiKey": {
            "description": "API key provided by us to access API",
            "type": "string"
          }
        }
      },
      "DeleteUser": {
        "required": [
          "apiUser",
          "apiPassword",
          "apiKey",
          "username"
        ],
        "type": "object",
        "properties": {
          "apiUser": {
            "description": "Username which is provided by us.",
            "type": "string"
          },
          "apiPassword": {
            "description": "Password provided by us.",
            "type": "string"
          },
          "apiKey": {
            "description": "API key provided by us to access API.",
            "type": "string"
          },
          "username": {
            "description": "Username to delete a user from a particular location.",
            "type": "string"
          }
        }
      },
      "AddUser": {
        "required": [
          "apiUser",
          "apiPassword",
          "apiKey",
          "username",
          "password",
          "allowed_speed_in_mbps",
          "allowed_ips_for_transfer"
        ],
        "type": "object",
        "properties": {
          "apiUser": {
            "description": "Username which is provided by us.",
            "type": "string"
          },
          "apiPassword": {
            "description": "Password provided by us.",
            "type": "string"
          },
          "apiKey": {
            "description": "API key provided by us to access API",
            "type": "string"
          },
          "username": {
            "description": "A unique identifier for each user.",
            "type": "string"
          },
          "password": {
            "description": "A unique password for user authentication",
            "type": "string"
          },
          "allowed_speed_in_mbps":  {
            "description": "Speed (in Mbps) permitted for data transfer. Like 100, 200 or 300.",
            "type": "integer"
          },
          "allowed_ips_for_transfer": {
            "description": "List of IP addresses of receiving side permitted for data transfer",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "Error": {
        "required": [
          "status",
          "message"
        ],
        "type": "object",
        "properties": {
          "status": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}